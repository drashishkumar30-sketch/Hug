<script>
function showMsg(type) {
    let text = "";

    if(type === "Big") {
        text = "A big warm hug coming your way Yukti ğŸ’•";
    } 
    else if(type === "Very Big") {
        text = "Very big hug loading... squeeze level 100% ğŸ¤­â¤ï¸";
    } 
    else {
        text = "My type hug? Iâ€™m not letting go anytime soon Yukti ğŸ˜ŒğŸ’–";
        explodeKiss();
        explodeConfetti();
        setTimeout(showFinalScreen, 4000);
    }

    document.getElementById("message").innerHTML = text;
}

function createFloatingEmoji(className, emoji, count) {
    for(let i = 0; i < count; i++) {
        const el = document.createElement("div");
        el.classList.add(className);
        el.innerHTML = emoji;
        el.style.left = Math.random() * 100 + "vw";
        el.style.top = Math.random() * 80 + "vh";
        document.body.appendChild(el);

        setTimeout(() => {
            el.remove();
        }, 4000);
    }
}

function explodeKiss() {
    createFloatingEmoji("kiss", "ğŸ˜˜", 20);
}

function explodeConfetti() {
    createFloatingEmoji("confetti", "ğŸ‰", 25);
}

function createHeart() {
    const heart = document.createElement("div");
    heart.classList.add("heart");
    heart.innerHTML = "â¤ï¸";
    heart.style.left = Math.random() * 100 + "vw";
    document.body.appendChild(heart);

    setTimeout(() => {
        heart.remove();
    }, 4000);
}

function showFinalScreen() {
    document.getElementById("mainContent").style.display = "none";
    document.getElementById("finalScreen").style.display = "flex";
}

setInterval(createHeart, 400);
</script>

